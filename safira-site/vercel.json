{
  "buildCommand": "npm run build:prod",
  "outputDirectory": "dist/safira-site",
  "installCommand": "npm install",
  "devCommand": "npm run start",
  "functions": {
    "api/**": {
      "runtime": "nodejs18"
    }
  },
  "routes": [
    {
      "src": "/dist/safira-site/browser/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/dist/safira-site/browser/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/safira-site/server/server.mjs"
    }
  ]
}